{%  extends('base.html.twig') %}
{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="col-md-12">
            <h2>Product Details</h2>
        </div>
        <div class="col-md-12">
            <div class="col-md-4">
                Product Name:
            </div>
            <div class="col-md-8">
                {{ product.name }}
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-4">
                Product Description:
            </div>
            <div class="col-md-8">
                {{ product.description }}
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-4">
                Product Quantity:
            </div>
            <div class="col-md-8">
                {{ product.quantity }}
            </div>
        </div>
    </div>
{% endblock %}
